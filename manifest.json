{
  "manifest_version": 3,
  "name": "Gone Phishin'",
  "version": "1.0.0",
  "description": "A Chrome extension for phishing protection and detection. Forces HTTPS, blocks mixed content, and detects HTTPSâ†’HTTP downgrades.",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "webRequest",
    "webNavigation",
    "scripting"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js", "heuristics/heuristics-engine.js"],
      "run_at": "document_idle"
    }
  ],
    "host_permissions": [
      "https://urlscan.io/*",
      "http://localhost:8080/*",
      "http://127.0.0.1:8080/*",
      "http://localhost:9001/*",
      "http://127.0.0.1:9001/*",
      "<all_urls>"
    ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "https_rules",
        "enabled": true,
        "path": "rules/https_rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["warning.html", "warning.css", "warning.js", "interstitial.html", "interstitial.js", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Gone Phishin'",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
